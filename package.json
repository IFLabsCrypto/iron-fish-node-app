{
  "private": true,
  "name": "ironfish-node-app",
  "description": "Iron Fish Node App",
  "version": "2.0.0",
  "author": "IF Labs <engineering@iflabs.network> (https://iflabs.network)",
  "main": "app/background.js",
  "scripts": {
    "dev": "nextron",
    "build-check": "npm run i18n && nextron build --no-pack",
    "build": "npm run i18n && nextron build",
    "lint": "eslint --fix --config .eslintrc.js .",
    "format": "prettier --config .prettierrc --write .",
    "prepare": "husky install",
    "postinstall": "electron-builder install-app-deps",
    "release": "npm run i18n && nextron build --publish always",
    "extract:i18n": "formatjs extract './renderer/{pages,components,sections}/**/*.{js,ts,tsx}' --format simple --id-interpolation-pattern '[sha512:contenthash:base64:6]' --out-file renderer/intl/locales/en.json",
    "compile:i18n": "formatjs compile-folder --ast --format simple renderer/intl/locales renderer/intl/compiled-locales",
    "i18n": "npm run extract:i18n && npm run compile:i18n"
  },
  "license": "MPL-2.0",
  "dependencies": {
    "@ironfish/sdk": "1.13.0",
    "electron-serve": "^1.1.0"
  },
  "devDependencies": {
    "@chakra-ui/icons": "^2.1.1",
    "@chakra-ui/react": "^2.8.1",
    "@chakra-ui/styled-system": "^2.9.1",
    "@chakra-ui/system": "^2.6.1",
    "@chakra-ui/theme-tools": "^2.1.1",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@formatjs/cli": "^6.2.4",
    "@hookform/resolvers": "^3.3.2",
    "@radix-ui/react-select": "^2.0.0",
    "@tanstack/react-query": "^4.35.7",
    "@trpc/client": "^10.38.5",
    "@trpc/react-query": "^10.38.5",
    "@trpc/server": "^10.38.5",
    "@types/lodash-es": "^4.17.9",
    "@types/nedb": "^1.8.14",
    "@types/node": "^18.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@types/tar": "^6.1.6",
    "@types/uuid": "^9.0.5",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "babel-plugin-formatjs": "^10.5.10",
    "compare-versions": "6.1.0",
    "consola": "^2.15.0",
    "date-fns": "^2.30.0",
    "date-fns-tz": "^2.0.0",
    "electron": "28.0.0",
    "electron-builder": "^24.6.4",
    "electron-log": "5.0.0",
    "electron-store": "^8.1.0",
    "electron-trpc": "^0.5.2",
    "electron-updater": "6.1.4",
    "eslint": "^8.50.0",
    "eslint-config-next": "^13.5.4",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.28.1",
    "filesize": "^10.1.0",
    "framer-motion": "^10.16.4",
    "husky": "^8.0.0",
    "lint-staged": "^14.0.1",
    "lodash-es": "^4.17.21",
    "nedb": "^1.8.0",
    "next": "^12.3.4",
    "nextron": "^8.11.3",
    "prettier": "^3.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.47.0",
    "react-icons": "^4.11.0",
    "react-intl": "^6.5.5",
    "react-markdown": "9.0.1",
    "tar": "^6.2.0",
    "type-fest": "^4.6.0",
    "typescript": "^5.2.2",
    "usehooks-ts": "^2.9.1",
    "uuid": "^9.0.1",
    "zod": "^3.22.3"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "npm run extract:i18n",
      "git add renderer/intl/locales/en.json"
    ]
  }
}
